# Hugging Face Spaces 环境配置
# 端口配置 - Hugging Face Spaces 使用 7860
PORT=7860

# 数据库配置 - 使用 PostgreSQL
# 注意：实际的数据库连接字符串需要在 Hugging Face Spaces 的 Secrets 中配置
# 格式示例：postgres://username:password@host:port/database?sslmode=require
# SQL_DSN=postgres://username:password@host:port/database?sslmode=require

# 缓存配置
MEMORY_CACHE_ENABLED=true
SYNC_FREQUENCY=60

# 会话配置
SESSION_SECRET=huggingface-spaces-veloera-secret-key

# 功能配置
GENERATE_DEFAULT_TOKEN=true
UPDATE_TASK=true
STREAMING_TIMEOUT=90
GET_MEDIA_TOKEN=true
GET_MEDIA_TOKEN_NOT_STREAM=true
DIFY_DEBUG=false
FORCE_STREAM_OPTION=true

# 安全配置
COHERE_SAFETY_SETTING=CONTEXTUAL
GEMINI_VISION_MAX_IMAGE_NUM=16
MAX_FILE_DOWNLOAD_MB=20

# 通知配置
NOTIFICATION_LIMIT_DURATION_MINUTE=10
NOTIFY_LIMIT_COUNT=2

# 运行模式
GIN_MODE=release
NODE_TYPE=master

# 批量更新配置
BATCH_UPDATE_ENABLED=false
BATCH_UPDATE_INTERVAL=5

# 调试配置（生产环境建议关闭）
ENABLE_PPROF=false